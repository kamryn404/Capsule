platform :osx, '11.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run \"flutter pub get\""
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_macos_build_settings(target)
    
    # Add linker flag to suppress duplicate dylib warnings from FFmpeg frameworks
    # The pre-built FFmpeg frameworks have duplicate load commands that can't be removed
    target.build_configurations.each do |config|
      config.build_settings['OTHER_LDFLAGS'] ||= '$(inherited)'
      unless config.build_settings['OTHER_LDFLAGS'].include?('-Wl,-no_warn_duplicate_libraries')
        config.build_settings['OTHER_LDFLAGS'] = "#{config.build_settings['OTHER_LDFLAGS']} -Wl,-no_warn_duplicate_libraries"
      end
    end
  end

  # Apply linker flags and build phases to the Runner target itself
  # (not just Pod targets - the Runner is what links the FFmpeg frameworks)
  installer.aggregate_targets.each do |target|
    if target.name == 'Pods-Runner'
      target.user_project.targets.each do |user_target|
        if user_target.name == 'Runner'
          # Add linker flag to suppress duplicate dylib errors from FFmpeg frameworks
          # The pre-built FFmpeg frameworks have duplicate LC_LOAD_DYLIB entries for libiconv
          # that cannot be removed with install_name_tool
          user_target.build_configurations.each do |config|
            ldflags = config.build_settings['OTHER_LDFLAGS'] || '$(inherited)'
            unless ldflags.include?('-Wl,-no_warn_duplicate_libraries')
              config.build_settings['OTHER_LDFLAGS'] = "#{ldflags} -Wl,-no_warn_duplicate_libraries"
            end
          end

          # Force copy the custom AppIcon.icns into the build bundle
          # This bypasses the Asset Catalog compiler which often causes the "tiny icon" bug
          phase_name = 'Force Copy AppIcon'
          existing_phase = user_target.shell_script_build_phases.find { |p| p.name == phase_name }
          unless existing_phase
            puts "Adding #{phase_name} build phase to Runner..."
            phase = user_target.new_shell_script_build_phase(phase_name)
            phase.shell_script = "cp -f \"${PROJECT_DIR}/Runner/AppIcon.icns\" \"${BUILT_PRODUCTS_DIR}/${PRODUCT_NAME}.app/Contents/Resources/AppIcon.icns\""
            phase.show_env_vars_in_log = '0'
          end
        end
      end
      target.user_project.save
    end
  end
end
